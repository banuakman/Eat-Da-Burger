<div class="container text-center">
    <h1>Eat-Da-Burger!</h1>
</div>

<div class="container" id="columns">
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers Available</h2>
            <ol>
                {{#each burgers}}
                {{#unless devour}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-md-6">
            <h2>Burgers Devoured</h2>
            <ol>
                {{#each burgers}}
                {{#if devour}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
</div>

<div class="container text-center" id="newBurgerForm">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center name">Name Your Burger</h1>

            <form id="create-form">
                <div class="form-group text-center">
                    <input type="text" id="burg" name="name">
                </div>
                <br>
                <button id="submitBtn" class="btn btn-danger" type="submit">Make Your Burger!</button>
            </form>
        </div>
    </div>
</div>